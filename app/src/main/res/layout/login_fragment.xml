<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/e_walle_login"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageLeftLong"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/image_left_side"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contentStart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="166dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contentEnd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="27dp" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/vectorWeather"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/contentStart"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="06:20 PM" />

    <ImageView
        android:id="@+id/vectorWeather"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_login_cloud"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textDegreeСelsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="34°С" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        app:constraint_referenced_ids="vectorWeather,textDegreeСelsius"
        app:flow_horizontalGap="10dp"
        app:flow_horizontalStyle="packed"
        app:layout_constraintBottom_toBottomOf="@+id/textTime"
        app:layout_constraintEnd_toStartOf="@+id/contentEnd"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/textTime"
        app:layout_constraintTop_toTopOf="@+id/textTime" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/contentEnd"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/contentStart"
        app:layout_constraintTop_toBottomOf="@+id/textTime"
        tools:ignore="MissingConstraints"
        tools:text="Nov.10.2020 | Wednesday" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/dateBottomBarrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="textTime,weather, textDate" />

    <TextView
        android:id="@+id/textCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Create an account"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/contentEnd"
        app:layout_constraintStart_toStartOf="@+id/contentStart" />

    <android.widget.Button
        android:id="@+id/buttonEntrance"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/custom_button"
        android:text="Sign in ➞"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/textCreateAccount"
        app:layout_constraintEnd_toStartOf="@+id/contentEnd"
        app:layout_constraintStart_toStartOf="@+id/contentStart"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/buttonTopBarrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="top"
        app:constraint_referenced_ids="textCreateAccount, buttonEntrance" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/image_logo"
        app:layout_constraintBottom_toTopOf="@+id/textNameApp"
        app:layout_constraintStart_toStartOf="@+id/contentStart"
        app:layout_constraintTop_toTopOf="@id/dateBottomBarrier"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textNameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/contentStart"
        app:layout_constraintTop_toBottomOf="@+id/imageLogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Open An Account For Digital E-Wallet Solutions.Instant Payouts. \n\n Join For Free."
        android:textSize="16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/buttonTopBarrier"
        app:layout_constraintEnd_toStartOf="@id/contentEnd"
        app:layout_constraintStart_toStartOf="@+id/contentStart"
        app:layout_constraintTop_toBottomOf="@+id/textNameApp" />
</androidx.constraintlayout.widget.ConstraintLayout>